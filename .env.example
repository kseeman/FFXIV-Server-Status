# Discord Bot Token - Get from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Discord Application Client ID - Get from the same page as the bot token
CLIENT_ID=your_application_client_id_here

# Discord Channel ID where status updates will be sent
CHANNEL_ID=your_channel_id_here

# Optional: Role ID to ping when server becomes available (leave empty for no pings)
PING_ROLE_ID=your_role_id_here

# Development mode - set to 'true' to get all status change notifications (default: false)
DEV_MODE=false

# How often to check server status (in minutes)
CHECK_INTERVAL=5
